    <% provide(:title, 'Todas las categorías') %>
      <div id="toolbar" class="primary-color z-depth-1">
      <div class="logo-container">
          <%= link_to root_path do %>
            <img class="logo" src="https://res.cloudinary.com/swarmly/image/upload/v1547543630/logo.svg" alt="swarmly">
          <% end %>
      </div>
        <% if logged_in? %>
        <div class="toolbar-item">
            <% if current_user.admin? %>
                <%= link_to new_category_path do %>
                    <i class="ion-android-add-circle"></i>
                <% end %>
            <% end %>

            <% if current_user.userspic.present? %>
                    <%= link_to image_tag(current_user.userspic.url(:picture_display), class: 'media-left avatar small'), user_path(current_user) %>
                <% elsif current_user.remote_avatar.present? %>
                    <%= link_to image_tag(current_user.remote_avatar, class: 'media-left avatar small'), user_path(current_user) %>
                <% else %>
                    <%= link_to image_tag("noprofile.png", class: 'media-left avatar small'), user_path(current_user) %>
            <% end %>
        </div> 
        <% else %> 
          <div class="toolbar-item">
            <%= link_to new_user_session_path do %>
                <i class="ion-android-open"></i>
            <% end %>
        </div> 
        <% end %>        
      </div> 
    <nav class="bottom-nav">
      <%= link_to root_path, :class => "bottom-nav__action bottom-nav__action" do %>
        <i class="ion-home bottom-icon"></i>
        <span class="bottom-nav__label">Inicio</span>
      <% end %> 

      <%= link_to categories_path, :class => "bottom-nav__action bottom-nav__action--active" do %>
        <i class="ion-android-apps bottom-icon"></i>
        <span class="bottom-nav__label">Categorías</span>
      <% end %>

      <%= link_to groups_path, :class => "bottom-nav__action bottom-nav__action" do %>
        <i class="ion-android-compass bottom-icon"></i>
        <span class="bottom-nav__label">Explorar</span>
      <% end %>
    </nav>
    <div class="animated fadeinup">
            <div class="container">
              <div class="row">
                <div class="col s12 m8 offset-m2">
                  <% @categories.each do |category| %>
                    <div class="category-banner full animated fadeinup delay-3">
                        <%= image_tag category.categoriespic.url if category.categoriespic? %>
                        <div class="opacity-overlay valign-wrapper">
                          <div class="valign center width-100">
                            <h3 class="white-text"><%= link_to category.name.capitalize, category_path(category) %></h3>
                          </div>
                          <% if logged_in? && current_user.admin?  %>
                          <div class="category-actions">
                          <%= link_to edit_category_path(category) do %>
                              <i class="ion-android-create group-action"></i>  
                          <% end %>
                          </div>
                          <% end %>
                        </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
      <div class="clearfix"></div>
    </div>
<% if favorite = current_user.favorite_for(group) %>
  <%= link_to [group, favorite], method: :delete do %>
    <i class="ion-android-bookmark accent-text"></i>
  <% end %>

<% else %>

  <%= link_to [group, Favorite.new], method: :post do %>
    <i class="ion-android-bookmark secondary-text"></i>
  <% end %>
<% end %>
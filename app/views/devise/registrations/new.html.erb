    <% provide(:title, 'Register') %>
    <div class="form-body white">
        <div class="website-logo">
            <a href="index.html">
                <div class="logoland">
                <%= link_to root_path do %>
                  <img class="logo-size" src="https://res.cloudinary.com/swarmly/image/upload/v1547543630/logo.svg" alt="">
                <% end %>                    
                </div>
            </a>
        </div>
        <div class="gridland">
            <div class="img-holder">
                <div class="bg"></div>
            </div>
            <div class="form-holder">
                <div class="form-content white">
                    <div class="form-items regular">
                        <h3>Empieza a compartir y aprender.</h3>
                        <p class="regular">Crea grupos, clips, notas y encuentra una Zona Swarmly donde puedas aprender.</p>
                        <div class="page-links">
                            <%= link_to 'Ingresar', new_session_path(@user) %>
                            <%= link_to 'Regístrate', new_registration_path(@user), :class => "active" %>
                        </div>
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                          <%= devise_error_messages! %>
                          <%= f.text_field :fullname, class: 'form-control', placeholder: "Nombre completo" %>
                          <%= f.text_field :username, class: 'form-control', placeholder: "Nombre de usuario" %>
                          <%= f.email_field :email, class: 'form-control', placeholder: "Correo" %>
                          <%= f.password_field :password, class: 'form-control', placeholder: "Contraseña" %>
                          <div class="form-button">
                            <%= button_tag(type: "submit", class: "ibtn") do %>
                                Crear cuenta
                            <% end %>
                            <%= link_to "No recibí la confirmación", new_user_confirmation_path(@user), :class => "forgot" %>
                          </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
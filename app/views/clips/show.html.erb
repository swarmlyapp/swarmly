<% provide(:title, "Clip #{@clip.caption}") %>
<%= render 'shared/folder_toolbar' %>
      <div class="container">
        <div class="row">
          <div class="col s12 m8 offset-m2">
            <div class="card clip">
              <div class="animated fadein">
                <%= image_tag(@clip.clipspic.url) %>
              </div>
              <div class="p-20 animated fadeinup delay-1">
                <h2><%= @clip.caption %></h2>
                <p class="regular">Creado hace <%= time_ago_in_words(@clip.created_at) %></p>
              </div>
              <div class="media-share-author media-author animated fadeinright delay-2">
                <% if @clip.user.userspic.present? %>
                    <%= link_to image_tag(@clip.user_userspic.url(:picture_display), class: 'avatar'), user_path(@clip.user.id) %>
                  <% elsif @clip.user.remote_avatar.present? %>
                    <%= link_to image_tag(@clip.user.remote_avatar, class: 'avatar'), user_path(@clip.user_id) %>
                  <% else %>
                    <%= link_to image_tag("noprofile.png", class: 'avatar'), user_path(@clip.user.id) %>
                <% end %>
                <span><%= link_to @clip.user.username.capitalize, user_path(@clip.user.id) %>
                <% if @clip.user.admin? %>
                  <i class="ion-checkmark-circled"></i>  
                <% end %>
                </span>
                <% if logged_in? && (@clip.user==current_user || current_user.admin?) %>
                <div class="media-social-share">
                  <%= link_to edit_clip_path(@clip) do %>
                    <i class="ion-android-create"></i>  
                  <% end %>
                  <%= link_to clip_path(@clip), method: :delete, data:{confirm: "EstÃ¡s seguro que quieres eliminar este clip?"} do %>
                    <i class="ion-android-delete"></i>  
                  <% end %>
                </div>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
<%= render 'shared/folder_nav' %>
          <div class="note">
            <div class="media-top-object animated fadeinright z-depth-1 delay-2">
              <%= link_to image_tag(note.notespic.url(:picture_display), class: 'media-left'), note_path(note) %>
              <div class="media-body">
                <h4 class="note-title"><%= link_to note.name, note_path(note) %></h4>
                <div class="regular"><%= sanitize note.body.truncate(125) %></div>
                <%= render partial: "votes/voter", locals: {note: note} %>
              </div>
            </div>
          </div>
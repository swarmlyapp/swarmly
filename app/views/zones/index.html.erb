<% provide(:title, 'Encuentra una Zona Swarmly') %>
<%= render 'shared/folder_toolbar' %>
<% if @zones.empty? %>
  <%= render 'shared/not_found', name: "Zona Swarmly" %>
<% else %>
  <div class="page-folder animated fadeinup delay-2">
    <div class="card m-20">
      <div class="media-top-object middle m-0 p-10">
          <i class="ion-ios-location media-left"></i>
        <div class="media-body">
          <span>Aprende en una Zona Swarmly</span>
        </div>
      </div>
      <div id="map" style='width: 100%; height: 250px;'></div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col s12 m6 offset-m3">
          <%= render @zones %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render 'shared/folder_nav' %>
  
<%= javascript_include_tag 'https://maps.google.com/maps/api/js?key=AIzaSyB1YVqZDu7QflsYUp1-nTyxvLgbdoYi9JM' %>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
<script type="text/javascript">
  var handler = Gmaps.build('Google');
  handler.buildMap({ internal: { id: 'map' } }, function(){
    markers = handler.addMarkers(<%= raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    if (markers.length == 0) {
      handler.getMap().setZoom(2);
    } else if (markers.length == 1) {
      handler.getMap().setZoom(14);
    }
  });
</script>